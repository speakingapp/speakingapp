---
import MockLayout from "../../../layouts/MockLayout.astro";
---

<MockLayout title="Reading">
    <ons-page>
    
        <!----Alert timer--->
    <div class=" hidden alert-timer-overlay">
    <h3 class="text-center text-rose-500 font-bold my-1 text-3xl">Time is Up</h3>
        <button id="alert-check" class="bg-rose-500 rounded px-4 py-2 text-white">Check</button>
    </div> 
        
       <!---Submit alert----> 
        <div class="alert-container hidden">
        <div class="alert-body">
        <p class="text-bold text-gray-400">Are you sure to sumbit?</p>
        <div class="divider"></div>
        <div class="flex justify-center items-center">   
        <button id="sure" class="text-blue-400">Yes</button>
        <div class="divider divider-horizontal"></div>
        <button id="notsure" class="text-blue-400">Cancel</button> 
        </div>     
            </div>
        </div>
        
    <!---Submit alert---->
        
        <nav class="navbar">
    <div class="flex items-center">
    <p class="text-orange-500 text-xl font-bold mx-2" id="countdown" style="font-family: monospace">01:00:00</p>
    <div class=" ml-4 font-bold text-xl" style="color:rgb(252, 219, 34)">Mock Exams</div>
     </div>         
    <button id="submit-btn" class="bg-orange-500 text-white font-bold py-2 px-3 rounded-lg flex items-center">Submit <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 mx-2">
      <path d="M3.478 2.405a.75.75 0 00-.926.94l2.432 7.905H13.5a.75.75 0 010 1.5H4.984l-2.432 7.905a.75.75 0 00.926.94 60.519 60.519 0 0018.445-8.986.75.75 0 000-1.218A60.517 60.517 0 003.478 2.405z" />
    </svg>
    
    </button>        
    <div class="flex items-center">
    <svg id="part_trans" class="w-7 h-7 font-bold cursor-pointer text-gray-50 mr-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path fill="currentColor" fill-rule="evenodd" d="M3 6a3 3 0 0 1 3-3h2.25a3 3 0 0 1 3 3v2.25a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3V6Zm9.75 0a3 3 0 0 1 3-3H18a3 3 0 0 1 3 3v2.25a3 3 0 0 1-3 3h-2.25a3 3 0 0 1-3-3V6ZM3 15.75a3 3 0 0 1 3-3h2.25a3 3 0 0 1 3 3V18a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3v-2.25Zm9.75 0a3 3 0 0 1 3-3H18a3 3 0 0 1 3 3V18a3 3 0 0 1-3 3h-2.25a3 3 0 0 1-3-3v-2.25Z" clip-rule="evenodd"/></svg>        
    <!---exit svg-->
    <svg id="exit-btn" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 font-bold cursor-pointer text-orange-500 mr-3">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9" />
    </svg>    
    </div>           
    </nav>  
        
    <!-----Overlay parts--->
    <div class="overlay hidden flex justify-center items-center">
        <div class="parts rounded flex flex-wrap">
            
            <button id="show_part1"  class="col-3 bg-emerald-400 rounded py-2 px-3 font-bold text-gray-100">Part 1</button>
            <button id="show_part2" class="col-3 bg-emerald-400 rounded py-2 px-3 font-bold text-gray-100">Part 2</button>
            <button id="show_part3"  class="col-3 bg-emerald-400 rounded py-2 px-3 font-bold text-gray-100">Part 3</button>
            <button id="show_part4"  class="col-3 bg-emerald-400 rounded py-2 px-3 font-bold text-gray-100">Part 4</button>
            <button id="show_part5"  class="col-3 bg-emerald-400 rounded py-2 px-3 font-bold text-gray-100">Part 5</button>
            <button id="show_result"  class="hidden col-3 bg-emerald-400 rounded py-2 px-3 font-bold text-gray-100">Result</button>
        </div>
    </div>    
        
        
    <!---Alert--->
    
        <ons-alert-dialog id="dialog-1">
      <div class="alert-dialog-content font-bold text-xl">
        Are you sure to exit?
      </div>
      <div class="alert-dialog-footer">
        <ons-alert-dialog-button id="false">Cancel</ons-alert-dialog-button>
        <ons-alert-dialog-button id="true">Yes</ons-alert-dialog-button>
      </div>
    </ons-alert-dialog>
        
        
        <div id="part1" class="container mx-auto px-4 py-3"></div>
        <div id="part2" class="hidden container mx-auto px-4 py-3"></div>
        <div id="part3" class="hidden container mx-auto px-4 py-3"></div>
        <div id="part4" class="hidden container mx-auto px-4 py-3"></div>
        <div id="part5" class="hidden container mx-auto px-4 py-3"></div>
        <div id="result" class="hidden container mx-auto px-4 py-3"></div>
    
        
      
    </ons-page> 
</MockLayout>

<script src="/static/js/main.js" is:inline></script>    
<script is:inline>
    window.history.pushState(null, null, window.location.href);
window.onpopstate = function () {
    window.history.go(2);
};        
        
    $("#exit-btn").click(()=>{
  $("#dialog-1").show()  
})

$("#false").click(()=>{
    $("#dialog-1").hide() 
})


$("#true").click(()=>{
    $("#dialog-1").hide()
    window.location.href='/mock-test' 
})
    
$("#part1").load('/static/test1_reading/part1.html') 
$("#part2").load('/static/test1_reading/part2.html')
$("#part3").load('/static/test1_reading/part3.html')
$("#part4").load('/static/test1_reading/part4.html')
$("#part5").load('/static/test1_reading/part5.html')
$("#result").load('/static/test1_reading/result.html')
    
</script>