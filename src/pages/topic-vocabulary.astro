---
import { Picture } from "@astrojs/image/components";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";


let res = await fetch("https://xirurgabdukarim.uz/wp-json/wp/v2/speakingvocabulary")
let posts = await res.json();
---

<Layout title="Topic Vocabulary">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Topic Vocabulary</Fragment>
      <Fragment slot="desc">
       Bepul lug'at va testlar
      </Fragment>
    </Sectionhead>
    <main class="mt-16">
       <div class="grid gap-8 lg:grid-cols-2">
  {
      posts.map((post) => (

          <article class="p-6 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
              <div class="flex justify-between items-center mb-5 text-gray-500">
                  <span class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">
                  
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="mr-1 w-3 h-3">
  <path d="M8.25 4.5a3.75 3.75 0 117.5 0v8.25a3.75 3.75 0 11-7.5 0V4.5z" />
  <path d="M6 10.5a.75.75 0 01.75.75v1.5a5.25 5.25 0 1010.5 0v-1.5a.75.75 0 011.5 0v1.5a6.751 6.751 0 01-6 6.709v2.291h3a.75.75 0 010 1.5h-7.5a.75.75 0 010-1.5h3v-2.291a6.751 6.751 0 01-6-6.709v-1.5A.75.75 0 016 10.5z" />
</svg>

                      Speaking
                  </span>
                  <span class="text-sm">{post.date}</span>
              </div>
              <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
             <a href={`/topic-vocabulary/${post.slug}/`} set:html={post.title.rendered} />
               </h2>
              <div class="flex justify-between items-center">
                  <div class="flex items-center space-x-4">
                      <img class="w-7 h-7 rounded-full" src="https://img.freepik.com/premium-vector/man-character_665280-46970.jpg?w=2000" alt="Kubayev Javlon avatar" />
                      <span class="font-medium dark:text-white">
                          Kubayev Javlon
                      </span>
                  </div>
                  <a href={`/topic-vocabulary/${post.slug}/`} class="inline-flex items-center font-medium text-blue-600 dark:text-blue-500 hover:underline">
                      Read more
                      <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                  </a>
              </div>
          </article> 
))
  }
     </div>
    </main>
  </Container>
</Layout>
