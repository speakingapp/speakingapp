---
import { Picture } from "@astrojs/image/components";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";


let res = await fetch("https://xirurgabdukarim.uz/wp-json/wp/v2/speakingvocabulary")
let posts = await res.json();
---

<Layout title="Blog">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Topic Vocabulary</Fragment>
      <Fragment slot="desc">
       Bepul lug'at va testlar
      </Fragment>
    </Sectionhead>
    <main class="mt-16">
      <ul class="grid gap-16 max-w-4xl mx-auto">
        {
            posts.map((post) => (
            <li>
              <a href={`/sample-answer/${post.slug}/`}>
                <div class="grid md:grid-cols-2 gap-5 md:gap-10 items-center">
                  <Picture
                    src="https://cdnapisec.kaltura.com/html5/html5lib/v2.101/modules/KalturaSupport/thumbnail.php/p/4764982/uiconf_id/53181732/entry_id/1_ex1tt6og/height/480?&flashvars[parentDomain]=https%3A%2F%2Fwww.vocabulary.com%2F"
                    alt="Post image"
                    sizes="(max-width: 800px) 100vw, 800px"
                    widths={[200, 400, 800]}
                    aspectRatio="16:9"
                    background="#ffffff"
                    fit="cover"
                    position="center"
                    loading={index <= 2 ? "eager" : "lazy"}
                    decoding={index <= 2 ? "sync" : "async"}
                    class="w-full rounded-md"
                  />
                  <div>
                    <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
                      Topic Vocabulary
                    </span>

                    <h2 class="text-3xl font-semibold leading-snug tracking-tight mt-1 ">
                      {post.title.rendered}
                    </h2>

                    <div class="flex gap-2 mt-3">
                      <span class="text-gray-400">
                        Kubayev Javlon
                      </span>
                      <span class="text-gray-400">â€¢ </span>
                      <time
                        class="text-gray-400"
                        datetime={post.date.toISOString()}>
                        {post.date.toDateString()}
                      </time>
                    </div>
                  </div>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </Container>
</Layout>
