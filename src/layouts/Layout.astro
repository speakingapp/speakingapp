---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/favicon.png",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Edumo"
  : "SpeakingApp | Edumo Academy";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
<!-- Yandex Native Ads -->
<script is:inline>window.yaContextCb=window.yaContextCb||[]</script>
<script src="https://yandex.ru/ads/system/context.js" async is:inline></script>
     
<!-- Yandex.RTB -->
<script is:inline>window.yaContextCb=window.yaContextCb||[]</script>
<script src="https://yandex.ru/ads/system/context.js" async is:inline></script>

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="SpeakingApp - Multilevelga tayyorgarlik ko'rish uchun bepul onlayn platforma"
      canonical={canonicalURL}
      twitter={{
        creator: "@javlon_developer",
        site: "@speakingapp",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `SpeakingApp - Multilevelga tayyorgarlik ko'rish uchun bepul onlayn platforma`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "SpeakingApp",
        },
      }}
    />
  </head>
  <body>
<!-- Yandex.RTB R-A-2860373-3 -->
<div id="yandex_rtb_R-A-2860373-3"></div>
<script is:inline>window.yaContextCb.push(()=>{
	Ya.Context.AdvManager.render({
		"blockId": "R-A-2860373-3",
		"type": "topAd"
	})
})
</script>

<!-- Yandex.RTB R-A-2860373-4 -->
<div id="yandex_rtb_R-A-2860373-4"></div>
<script>window.yaContextCb.push(()=>{
	Ya.Context.AdvManager.render({
		"blockId": "R-A-2860373-4",
		"type": "fullscreen",
		"platform": "touch"
	})
})
</script>
    <Navbar />
<!-- Yandex Native Ads C-A-2860373-6 -->
<div id="yandex_rtb_C-A-2860373-6"></div>
<script is:inline>window.yaContextCb.push(()=>{
  Ya.Context.AdvManager.renderWidget({
    renderTo: 'yandex_rtb_C-A-2860373-6',
    blockId: 'C-A-2860373-6'
  })
})</script>
    <slot />


    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
      
body {
  user-select:none;
  --sb-track-color: #232E33;
  --sb-thumb-color: #888888;
  --sb-size: 10px;

  scrollbar-color: var(--sb-thumb-color) 
                   var(--sb-track-color);
}

body::-webkit-scrollbar {
  width: var(--sb-size) 
}

body::-webkit-scrollbar-track {
  background: var(--sb-track-color);
  border-radius: 10px;
}

body::-webkit-scrollbar-thumb {
  background: var(--sb-thumb-color);
  border-radius: 10px;
  
  }

    </style>


  </body>
</html>
